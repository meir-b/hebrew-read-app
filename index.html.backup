            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            width: 100%;
            max-width: 400px;
            max-height: 80vh;
            overflow-y: auto;
        }

        .settings-content.show {
            transform: scale(1);
            opacity: 1;
            visibility: visible;
        }

        @media (min-width: 768px) {
            .settings-panel {
                top: 0.75rem;
                right: 0.75rem;
            }
            
            .settings-toggle {
                padding: 0.5rem 1rem;
                font-size: 1.1rem;
            }
            
            .settings-content {
                position: absolute;
                top: 100%;
                right: 0;
                left: auto;
                bottom: auto;
                margin-top: 0.5rem;
                background: transparent;
                padding: 0;
                display: block;
            }
            
            .settings-content > div {
                width: auto;
                min-width: 350px;
                max-height: none;
            }
        }

        @media (min-width: 1024px) {
            .settings-panel {
                top: 1rem;
                right: 1rem;
            }
            
            .settings-toggle {
                padding: 0.5rem 1rem;
                font-size: 1.25rem;
            }
            
            .settings-content > div {
                min-width: 400px;
                padding: 2rem;
            }
        }

        /* Level Panel Styles - Mobile First */
        .level-panel {
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 1rem;
            padding: 1rem;
            margin-top: 1rem;
            margin-bottom: 1rem;
            box-shadow: var(--card-shadow);
            backdrop-filter: blur(20px);
            width: calc(100% - 2rem);
            max-width: 350px;
        }

        .level-header {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .level-header h2 {
            margin: 0;
            color: var(--primary-color);
            font-size: 1.1rem;
            line-height: 1.3;
        }

        .level-select-button {
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            cursor: pointer;
            touch-action: manipulation;
            align-self: flex-start;
        }

        .level-info p {
            margin: 0 0 0.75rem 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .level-progress {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        @media (min-width: 768px) {
            .level-panel {
                padding: 1.25rem;
                margin-top: 1.5rem;
                margin-bottom: 1.5rem;
                max-width: 450px;
            }
            
            .level-header {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
                gap: 1rem;
            }
            
            .level-header h2 {
                font-size: 1.3rem;
            }
            
            .level-select-button {
                padding: 0.6rem 1.2rem;
                font-size: 1rem;
                align-self: auto;
            }
            
            .level-info p {
                font-size: 1rem;
                margin-bottom: 1rem;
            }
            
            .level-progress {
                font-size: 0.95rem;
            }
        }

        @media (min-width: 1024px) {
            .level-panel {
                padding: 1.5rem;
                margin-top: 2rem;
                margin-bottom: 2rem;
                max-width: 600px;
            }
            
            .level-header h2 {
                font-size: 1.5rem;
            }
            
            .level-select-button {
                padding: 0.75rem 1.5rem;
                font-size: 1.1rem;
            }
            
            .level-info p {
                font-size: 1.1rem;
            }
            
            .level-progress {
                font-size: 1rem;
            }
        }

        .level-select-button:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

        .level-info p {
            margin: 0 0 1rem 0;
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .level-progress {
            font-size: 1rem;
            color: var(--text-primary);
            font-weight: 600;
        }

        /* Level Selector Modal */
        .level-selector-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            backdrop-filter: blur(5px);
        }

        .level-selector-content {
            background: var(--card-bg);
            border-radius: 1rem;
            padding: 2rem;
            max-width: 800px;
            max-height: 80vh;
            width: 90%;
            overflow-y: auto;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .level-selector-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            border-bottom: 1px solid var(--card-border);
            padding-bottom: 1rem;
        }

        .level-selector-header h2 {
            margin: 0;
            color: var(--primary-color);
        }

        .close-modal {
            background: none;
            border: none;
            font-size: 2rem;
            cursor: pointer;
            color: var(--text-secondary);
            padding: 0;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

        .close-modal:hover {
            background: var(--error-color);
            color: white;
        }

        .levels-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .level-card {
            background: var(--card-bg);
            border: 2px solid var(--card-border);
            border-radius: 1rem;
            padding: 1.5rem;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .level-card.unlocked:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            border-color: var(--primary-color);
        }

        .level-card.completed {
            border-color: var(--success-color);
            background: linear-gradient(135deg, var(--card-bg) 0%, rgba(107, 203, 119, 0.1) 100%);
        }

        .level-card.locked {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .level-icon {
            font-size: 3rem;
            text-align: center;
            margin-bottom: 1rem;
        }

        .level-info h3 {
            margin: 0 0 0.5rem 0;
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        .level-info p {
            margin: 0 0 1rem 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .level-progress-bar {
            background: var(--card-border);
            border-radius: 1rem;
            height: 0.5rem;
            margin-bottom: 0.5rem;
            overflow: hidden;
        }

        .progress-fill {
            background: linear-gradient(90deg, var(--primary-color), var(--success-color));
            height: 100%;
            border-radius: 1rem;
            transition: width 0.3s ease;
        }

        .level-stats {
            text-align: center;
            font-size: 0.9rem;
            color: var(--text-primary);
            font-weight: 600;
        }

        .lock-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 3rem;
            opacity: 0.7;
        }

        /* Animations */
        @keyframes backgroundShift {
            0% { background-position: 0% 0%; }
            100% { background-position: 100% 100%; }
        }

        @keyframes twinkle {
            from { opacity: 0.5; transform: scale(0.8); }
            to { opacity: 1; transform: scale(1.1); }
        }

        @keyframes rainbow {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        @keyframes successPopup {
            0% { transform: translateX(-50%) translateY(-100px); opacity: 0; }
            20% { transform: translateX(-50%) translateY(0); opacity: 1; }
            80% { transform: translateX(-50%) translateY(0); opacity: 1; }
            100% { transform: translateX(-50%) translateY(-20px); opacity: 0; }
        }

        @keyframes achievementPopup {
            0% { transform: translate(-50%, -50%) scale(0); }
            10% { transform: translate(-50%, -50%) scale(1.2); }
            20% { transform: translate(-50%, -50%) scale(1); }
            80% { transform: translate(-50%, -50%) scale(1); }
            100% { transform: translate(-50%, -50%) scale(0); }
        }

        @keyframes confettiFall {
            0% { transform: translateY(0) rotate(0deg) scale(0); }
            10% { transform: translateY(10px) rotate(45deg) scale(1); }
            100% { transform: translateY(100vh) rotate(720deg) scale(0); }
        }

        @keyframes starPop {
            0% { transform: scale(0) rotate(0deg); opacity: 1; }
            50% { transform: scale(1.5) rotate(180deg); opacity: 1; }
            100% { transform: scale(0) rotate(360deg); opacity: 0; }
        }

        @keyframes milestonePopup {
            0% { 
                transform: translate(-50%, -50%) scale(0.5) rotate(-5deg);
                opacity: 0;
                visibility: visible;
            }
            20% { 
                transform: translate(-50%, -50%) scale(1.2) rotate(3deg);
                opacity: 1;
            }
            80% {
                transform: translate(-50%, -50%) scale(1) rotate(0deg);
                opacity: 1;
            }
            100% { 
                transform: translate(-50%, -50%) translateY(-100px);
                opacity: 0;
                visibility: hidden;
            }
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- Display Area -->
        <div id="display-area">
            <div class="letter-display">א</div>
        </div>

        <!-- Controls -->
        <div class="controls">
            <button class="correct-btn">✔️ נכון</button>
            <button class="incorrect-btn">❌ לא נכון</button>
        </div>

        <!-- Success Message (Hidden by default) -->
        <div class="success-message" id="success-message" style="display:none;">
            תשובה נכונה! 🎉
        </div>

        <!-- Streak Counter (Hidden by default) -->
        <div class="streak-counter" id="streak-counter" style="display:none;">
            <span>🔥</span>
            <span id="streak-count">0</span>
            <span> streak!</span>
        </div>

        <!-- Settings Panel (Hidden by default) -->
        <div class="settings-panel" id="settings-panel" style="display:none;">
            <button class="settings-toggle" id="settings-toggle">⚙️</button>
            <div class="settings-content" id="settings-content">
                <div>
                    <h2>הגדרות</h2>
                    <div class="settings-section">
                        <h3>רמות ניקוד</h3>
                        <div class="preset-buttons">
                            <button class="preset-btn" data-value="1">רמה 1</button>
                            <button class="preset-btn" data-value="2">רמה 2</button>
                            <button class="preset-btn" data-value="3">רמה 3</button>
                        </div>
                        <p>בחר את רמת הקושי של המשחק.</p>
                    </div>
                    <div class="settings-section">
                        <h3>אפשרויות נוספות</h3>
                        <div class="nikud-toggle">
                            <div class="nikud-example">ּ</div>
                            <div>
                                <label>
                                    <input type="checkbox" id="nikud-toggle" checked>
                                    הראה ניקוד
                                </label>
                            </div>
                        </div>
                        <div class="sound-toggle">
                            <span>🔊</span>
                            <label>
                                <input type="checkbox" id="sound-toggle" checked>
                                הפעל צלילים
                            </label>
                        </div>
                    </div>
                    <button id="close-settings">סגור</button>
                </div>
            </div>
        </div>

        <!-- Level Selector Modal (Hidden by default) -->
        <div class="level-selector-modal" id="level-selector-modal" style="display:none;">
            <div class="level-selector-content">
                <div class="level-selector-header">
                    <h2>בחר רמה</h2>
                    <button class="close-modal" id="close-level-selector">×</button>
                </div>
                <div class="levels-grid" id="levels-grid">
                    <!-- Level cards will be generated by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <script>
        // JavaScript code for game logic, event listeners, and AJAX calls
        document.addEventListener('DOMContentLoaded', function() {
            const displayArea = document.getElementById('display-area');
            const successMessage = document.getElementById('success-message');
            const streakCounter = document.getElementById('streak-counter');
            const streakCount = document.getElementById('streak-count');
            const settingsPanel = document.getElementById('settings-panel');
            const settingsToggle = document.getElementById('settings-toggle');
            const settingsContent = document.getElementById('settings-content');
            const closeSettings = document.getElementById('close-settings');
            const levelSelectorModal = document.getElementById('level-selector-modal');
            const closeLevelSelector = document.getElementById('close-level-selector');
            const levelsGrid = document.getElementById('levels-grid');

            let currentLevel = 1;
            let currentStreak = 0;
            let maxLevel = 3; // Default max level
            let showNikud = true;
            let soundEnabled = true;

            function updateDisplay(letter) {
                displayArea.innerHTML = `<div class="letter-display">${letter}</div>`;
            }

            function showSuccessMessage() {
                successMessage.style.display = 'block';
                setTimeout(() => {
                    successMessage.style.display = 'none';
                }, 2000);
            }

            function updateStreakCounter() {
                streakCounter.style.display = 'flex';
                streakCount.innerText = currentStreak;
            }

            function hideSettingsPanel() {
                settingsPanel.style.display = 'none';
            }

            function showLevelSelector() {
                levelSelectorModal.style.display = 'flex';
                generateLevelCards();
            }

            function hideLevelSelector() {
                levelSelectorModal.style.display = 'none';
            }

            function generateLevelCards() {
                levelsGrid.innerHTML = '';
                for (let i = 1; i <= maxLevel; i++) {
                    const levelCard = document.createElement('div');
                    levelCard.className = 'level-card';
                    levelCard.innerHTML = `
                        <div class="level-icon">📚</div>
                        <div class="level-info">
                            <h3>רמה ${i}</h3>
                            <p>תיאור קצר על רמה ${i}.</p>
                        </div>
                        <div class="level-progress">
                            <div class="progress-fill" style="width: ${i * 20}%"></div>
                        </div>
                        <div class="level-stats">
                            <div>ניקוד: ${i * 10}</div>
                            <div>סטיקרים: ${i}</div>
                        </div>
                    `;
                    levelCard.addEventListener('click', () => {
                        currentLevel = i;
                        updateDisplay(`א`); // Update to the first letter for the new level
                        hideLevelSelector();
                    });
                    levelsGrid.appendChild(levelCard);
                }
            }

            // Event listeners
            document.querySelector('.correct-btn').addEventListener('click', () => {
                currentStreak++;
                showSuccessMessage();
                updateStreakCounter();
            });

            document.querySelector('.incorrect-btn').addEventListener('click', () => {
                currentStreak = 0;
                updateStreakCounter();
            });

            settingsToggle.addEventListener('click', () => {
                settingsPanel.style.display = 'flex';
            });

            closeSettings.addEventListener('click', hideSettingsPanel);
            closeLevelSelector.addEventListener('click', hideLevelSelector);

            // Initial display
            updateDisplay('א');
            updateStreakCounter();
        });
    </script>
</body>
</html>