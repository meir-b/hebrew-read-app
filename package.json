{
  "name": "hebrew-reading-app",
  "version": "1.0.0",
  "description": "An application to teach reading Hebrew letters with Nikud, incorporating assessment and game-like features.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "dependencies": {
    "ts-node": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^16.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5"
  },
  "keywords": [
    "hebrew",
    "reading",
    "education",
    "children",
    "nikud"
  ],
  "author": "Your Name",
  "license": "MIT"
}
